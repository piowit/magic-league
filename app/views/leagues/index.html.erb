<h1>Leagues</h1>

  <table class='table'>
    <thead class="table-dark">
      <tr>
        <th>Name</th>
        <th>Start date</th>
        <th>End date</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% leagues.each do |league| %>
        <tr>
          <td><%= league.name %></td>
          <td><%= league.start_date %></td>
          <td><%= league.end_date %></td>
          <td><%= link_to "Show", league %></td>
          <td><%= link_to "Edit", edit_league_path(league) if policy(league).update? %></td>
          <td><%= link_to "Join", join_league_path(league), data: { turbo_method: :post } if policy(league).join? %></td>
          <td><%= link_to "Add contest", new_contest_path(league: league) %></td>
        </tr>
      <% end %>
    </tbody>
</table>

